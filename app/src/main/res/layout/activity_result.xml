<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/textSolution"
        android:layout_width="282dp"
        android:layout_height="130dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="50dp"
        android:text="Solution will be shown here"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/ImageIllustration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ImageIllustration"
        android:layout_width="164dp"
        android:layout_height="160dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="221dp"
        android:layout_marginBottom="289dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSolution"
        tools:srcCompat="@drawable/happy_two_roots" />

    <Button
        android:id="@+id/btnGoBack"
        android:layout_width="103dp"
        android:layout_height="62dp"
        android:layout_marginStart="269dp"
        android:layout_marginTop="422dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="111dp"
        android:onClick="goBack"
        android:text="Back"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSolution" />
</androidx.constraintlayout.widget.ConstraintLayout>